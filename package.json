{
  "name": "@vodyani/winston",
  "license": "MIT",
  "version": "8.5.0",
  "author": "ChoGathK",
  "description": "ðŸ“’ Vodyani winston is a logging tool for operating and recording application logs.",
  "homepage": "https://github.com/vodyani/winston#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vodyani/winston.git"
  },
  "bugs": {
    "url": "https://github.com/vodyani/winston/issues"
  },
  "keywords": [
    "vodyani",
    "nodejs",
    "winston",
    "logger",
    "npm-package"
  ],
  "files": [
    "package.json",
    "README.MD",
    "LICENSE",
    "dist"
  ],
  "main": "dist/index.js",
  "scripts": {
    "local": "npm i && npm i @vodyani/eslint-config -D && npx husky install",
    "build": "rm -rf dist && tsc",
    "clear": "rm -rf ./logs && rm -rf ./test/temp",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint ./src ./test && tsc",
    "lint:fix": "eslint --fix --ext .ts src/ test/",
    "lint:html-report": "eslint ./src ./test -f html -o eslint-report.html",
    "lint:json-report": "eslint ./src ./test -f json -o eslint-report.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "eslintConfig": {
    "extends": "@vodyani"
  },
  "commitlint": {
    "extends": "@commitlint/config-conventional"
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": "(/test/.spec.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleNameMapper": {
      "@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.ts$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "./node_modules/(?!(lodash-es|other-es-lib))"
    ]
  },
  "dependencies": {
    "@vodyani/class-decorator": "^8.1.2",
    "@vodyani/core": "^8.6.1",
    "@vodyani/utils": "^8.4.3",
    "winston": "3.8.1",
    "winston-daily-rotate-file": "4.6.1"
  },
  "peerDependencies": {
    "winston-daily-rotate-file": "4.6.1"
  },
  "devDependencies": {
    "@commitlint/cli": "16.3.0",
    "@commitlint/config-conventional": "16.2.4",
    "@types/jest": "27.5.2",
    "@types/node": "16.11.56",
    "@vodyani/eslint-config": "^1.1.0",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "ts-jest": "27.1.5",
    "typescript": "4.8.2"
  }
}
